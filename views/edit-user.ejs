<% include partials/header.ejs %>
<div class="container">
  <% if (message) { %>
    <p class="text-center text-danger"><%= message %></p>
  <% } %>

  <% if (user) { %>
    <form class="add-user-form" action="" method="post" enctype="multipart/form-data">
      <div class="form-row">
        <div class="form-group col-md-4">
          <label for="first-name">First Name</label>
          <input type="text" class="form-control" name="first_name" id="first-name" value="<%= user.first_name %>" required>
        </div>
        <div class="form-group col-md-4">
          <label for="last-name">Last Name</label>
          <input type="text" class="form-control" name="last_name" id="last-name" value="<%= user.last_name %>" required>
        </div>
        <div class="form-group col-md-4">
          <label for="email">Username</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= user.email %>" required disabled title="email cannot be edited.">
        </div>
      </div>
      <button type="submit" class="btn btn-success float-right">Update User</button>
    </form>
  <% } else { %>
    <p class="text-center">User Not Found. Go <a href="/add">here</a> to add users.</p>
  <% } %>
</div>
</div>
</body>
</html>